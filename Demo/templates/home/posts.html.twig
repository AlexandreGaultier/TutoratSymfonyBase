{% extends 'base.html.twig' %}

{% block title %}Les Posts !{% endblock %}

{% block body %}

    <h1>Posts</h1>
    {% for post in posts %}
        <div style="margin : 10vh auto;padding : 2vw; box-shadow : 0 0 0.8vw white;">
            <h2>{{post.title}}</h2>
            <p>{{post.content}}</p>
            <a href="{{ path('posts_show', {'id': post.id}) }}" class="btn btn-primary">Checkout</a>
        </div>
    {% endfor %}

{% endblock %}
